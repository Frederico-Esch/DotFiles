[color]
background = #332277
;background = #60000000
;background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #f8f8f2
;foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
modulefg = #f7f7f7
modulefg-alt = #f7f7f7

; Active Shade
shade1 = #282629
shade2 = #37474F
shade3 = #455A64
shade4 = #546E7A
shade5 = #607D8B
shade6 = #78909C
shade7 = #90A4AE
shade8 = #B0BEC5

trans = #00000000
white = #FFFFFF
black = #000000
tray-background = ${self.background}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false
radius = 8.0
double_radius = -16
padding_right = 16

[global/wm]
margin-top = 0
margin-bottom = 10

[bar/barbase]
;width = ${env:width}
width = 95%
height = 35
offset-x = 2.5%
offset-y = 10
monitor = ${env:monitor}
fixed-center = true
bottom = false

background = ${color.background}
foreground = ${color.foreground}

radius = ${settings.radius}
;radius-top = 8.0
;radius-bottom = 8.0

line-size = 3
line-color = #f00

;border-size = 0
;border-bottom = 1
;border-color = #00000000

;padding = 2
padding-left = 1
padding-right = ${settings.padding_right}

module-margin-left = 1
;module-margin-right = 1

;module-margin = 1

;font-0 = "SauceCodePro Nerd Font:size=11:weight=semibold;3"
font-0 = "JetBrainsMono NerdFont:size=11;3"
modules-center = date wlan eth 
modules-right = cpu break memory break pulseaudio break temperature break battery break 

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0  filesystem
tray-position = right
tray-detached = true
tray-maxsize = 15
tray-offset-x = ${settings.double_radius}
tray-offset-y = 0
tray-padding = 5
tray-scale = 1.0
tray-background = ${color.tray-background}

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar1]
inherit = bar/barbase
modules-left = workspace1

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar2]
inherit = bar/barbase
modules-left = workspace2

[module/workspace2]
type = custom/script
exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[bar/mainbar3]
inherit = bar/barbase
modules-left = workspace3

[module/workspace3]
type = custom/script
exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

#####################################################################

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = "#ee6666"
;format-foreground = ${color.modulefg}
;format-background = ${color.shade6}
format-overline = #ee6666
label = %percentage:2%% 

[module/memory]
type = internal/memory
interval = 2
format-prefix = " 󱢡 "
format-prefix-foreground = "#66ee66"
format-overline = #66ee66
;format-foreground = ${color.modulefg}
;format-background = ${color.shade5}
label = %percentage_used%%

[module/wlan]
type = internal/network
;interface = net1
interface-type = wireless
interval = 3.0

format-connected = <ramp-signal> <label-connected>
;format-connected-foreground = ${color.modulefg}
;format-connected-background = ${color.shade5}
;format-connected-underline = #9f78e1
label-connected = %essid%%{F-} %local_ip%

format-disconnected = "󰖪 "
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${color.foreground-alt}

ramp-signal-0 = %{F#ff0000}󰤟
ramp-signal-1 = %{F#ffff00}󰤢
ramp-signal-2 = %{F#00ff00}󰤨
ramp-signal-3 = %{F#8800ff}
ramp-signal-4 = %{F#aa00ff}
ramp-signal-foreground = ${color.foreground-alt}

[module/eth]
type = internal/network
;interface = enp0s31f6
interface-type = wired
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = "󰈁 "
format-connected-prefix-foreground = ${color.foreground-alt}
label-connected = %local_ip%

format-disconnected = "󱘖 "
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${color.foreground-alt}
;format-connected-background = ${color.shade5}
;format-connected-foreground = ${color.modulefg}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
format-volume-background = ${color.background}
format-volume-foreground = ${color.foreground}
format-volume-overline = #6666ee
format-volume-prefix = "  "
format-volume-prefix-foreground = #6666ee
label-volume = %percentage%%
label-volume-foreground = ${color.foreground}

label-muted =  muted
label-muted-foreground = #888

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${color.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format =  <label>
format-overline = #f50a4d
;format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}
format-warn-overline = ${self.format-underline}
format-background = ${color.background}
format-foreground = ${color.foreground}

label = %temperature-c%
label-warn =    %temperature-c%
label-warn-foreground = ${color.secondary}

[module/date]
type = internal/date
interval = 5
time = %H:%M
time-alt = %d/%m/%Y %H:%M %p
;format-prefix = 
;format-prefix-foreground = ${color.foreground-alt}
;format-background = ${color.shade2}
;format-foreground = ${color.modulefg}
;format-underline = #0a6cf5
label = %date% %time%

[module/quote]
type = custom/text
content = Follow the white rabbit. Knock. Knock. 
content-foreground = ${color.foreground}
content-background = ${color.background}
content-prefix = "  "
content-prefix-foreground = ${color.foreground}
;content-underline = ${color.foreground}

[module/break]
type = custom/text
content = |
content-padding = 0
content-foreground = ${color.foreground}
content-background =  ${color.background}

[module/filesystem]
type = internal/fs
mount-0 = /
fixed-values = true
warn-percentage = 75

format-mounted = | %{F#00FF00}<label-mounted> |

label-mounted =   %{F-}%percentage_used%% - %total% 
format-warn = | %{F#FF0000}<label-mounted> |

[module/battery]
type = internal/battery
low-at = 10
battery = BAT1
adapter = ACAD
full-at = 99

format-charging = %{U#2222ff}<animation-charging>%{U-} <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <label-full>
format-low = <label-low>

;charging
label-charging = %percentage%%
label-charging-foreground = #2222ff

animation-charging-0 = %{+o}󰢟%{-o}
animation-charging-1 = %{+u}󰂇%{-u}
animation-charging-2 = %{+o}󰢝%{-o}
animation-charging-3 = %{+u}󰢞%{-u}
animation-charging-4 = %{+u}%{+o}󰂅%{-o}%{-u}
animation-charging-framrate = 50
animation-charging-foreground = #2222ff
;charging

;discharging
label-discharging = %percentage%%
ramp-capacity-0 = %{F#ff0000}%{F-}
ramp-capacity-1 = %{F#ff9900}%{F-}
ramp-capacity-2 = %{F#ffff00}%{F-}
ramp-capacity-3 = %{F#99ff00}%{F-}
ramp-capacity-4 = %{F#00ff00}%{F-}

;discharging

;full
label-full = 󰁹 FULL
label-full-foreground = #00ff00
label-full-overline = #00ff00
label-full-underline = #00ff00
;full

;low
label-low = 󱃍 LOW
label-low-foreground = #ff0000
label-low-overline = #ff0000
label-low-underline = #ff0000
;low
